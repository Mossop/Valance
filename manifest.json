{
  "manifest_version": 2,
  "name": "Per Window Proxy",
  "version": "0.1",
  "icons": {
    "48": "icons/icon.svg"
  },

  "permissions": [
    "proxy",
    "sessions",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background/shared.js",
      "background/config.js",
      "background/windows.js",
      "background/proxy.js",
      "background/main.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/icon-off.svg",
    "default_title": "Enable Proxy"
  },

  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true
  }
}
