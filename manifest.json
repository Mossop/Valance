{
  "manifest_version": 2,
  "name": "Valance Proxy Manager",
  "description": "Configure web proxies for individual windows.",
  "version": "0.8",

  "applications": {
    "gecko": {
      "strict_min_version": "61.0a1"
    }
  },

  "icons": {
    "48": "icons/icon.svg"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "sessions",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background/shared.js",
      "background/config.js",
      "background/windows.js",
      "background/proxy.js",
      "background/main.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon-off.svg",
    "default_title": "Enable Proxy"
  },

  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true
  }
}
